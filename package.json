{
  "name": "technify-workspace-api",
  "version": "0.0.1",
  "description": "Technify Workspace API",
  "main": "index.ts",
  "scripts": {
    "build": "npm run clean && npm run build:tsc",
    "build:tsc": "tsc -p .",
    "clean": "rm -rf dist",
    "config": "cp .env.example .env",
    "docker:start:dev": "docker-compose up -d && docker exec -it newsletter-app bash",
    "docker:build": "docker-compose build",
    "docker:stop": "docker-compose down",
    "lint": "eslint \"{src,tests}/**/*.ts\"",
    "lint:ci": "eslint \"{src,tests,scripts}/**/*.ts\" --quiet",
    "lint:fix": "eslint \"{src,tests,scripts}/**/*.ts\" --fix --quiet",
    "migration:run": "npm run typeorm:cli -- migration:run",
    "migration:revert": "npm run typeorm:cli -- migration:revert",
    "start:dev": "nodemon",
    "start:prod": "ts-node dist/index.js",
    "start": " npm run build && npm run start:prod",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli -f ./ormconfig.json",
    "pm2": "ts-node -T -P tsconfig.json index.ts",
    "prettier:format": "prettier --write \"src/**/*.+(ts|tsx|json|css)\" \"src/**/*.test.ts\""
  },
  "author": "@technifyinc",
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "^2.1003.0",
    "bcrypt": "^5.0.1",
    "chalk": "^5.0.0",
    "config": "^3.3.6",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "joi": "^17.4.2",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.14.0",
    "typeorm": "^0.2.42"
  },
  "_moduleAliases": {
    "@controllers": "src/controllers",
    "@services": "src/services",
    "@models": "src/models",
    "@utils": "src/utils",
    "@db": "src/db",
    "@config": "src/config",
    "@startup": "src/startup",
    "@routes": "src/routes",
    "@interfaces": "src/interfaces",
    "@constants": "src/constants",
    "@tests": "tests"
  },
  "devDependencies": {
    "@types/eslint": "^7.2.6",
    "@types/express": "^4.17.8",
    "@types/express-jwt": "0.0.42",
    "@types/faker": "^5.1.5",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.18.10",
    "@types/validator": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-promise": "^5.2.0",
    "faker": "^5.1.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "nodemon": "^2.0.4",
    "prettier": "^2.5.1",
    "sequelize-cli": "^6.4.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix"
    }
  }
}
